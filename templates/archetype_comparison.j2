<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Psycho-Dice-Namic: Archetype Comparison</title>
    <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 20px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            padding: 30px;
            backdrop-filter: blur(10px);
        }
        h1 {
            text-align: center;
            margin-bottom: 30px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }
        .chart-container {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            padding: 20px;
            margin: 20px 0;
            color: #333;
        }
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin: 20px 0;
        }
        .stat-card {
            background: rgba(255, 255, 255, 0.2);
            border-radius: 10px;
            padding: 20px;
            text-align: center;
        }
        .stat-value {
            font-size: 2em;
            font-weight: bold;
            margin: 10px 0;
        }
        .match-details {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            padding: 20px;
            margin: 20px 0;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 10px 0;
        }
        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }
        th {
            background: rgba(255, 255, 255, 0.1);
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>ðŸŽ² Psycho-Dice-Namic: Archetype Analysis</h1>

        <div class="chart-container">
            <div id="archetype-performance-chart"></div>
        </div>
    </div>

    <script>
        // Archetype stacked Win + Tie chart
        var names = {{ arch_names|tojson }};
        var winRates = {{ arch_win_rates|tojson }};
        var tieRates = {{ arch_tie_rates|tojson }};

        var perfData = [{
            x: names,
            y: winRates,
            type: 'bar',
            name: 'Win Rate',
            marker: { color: '#ff6b6b' }
        },{
            x: names,
            y: tieRates,
            type: 'bar',
            name: 'Tie Rate',
            marker: { color: '#ffa94d' }
        }];

        // dynamic y zoom around 0.5
        var allRates = winRates.concat(tieRates);
        var minRate = Math.min.apply(null, allRates);
        var maxRate = Math.max.apply(null, allRates);
        var padding = 0.05;
        var lower = Math.max(0, Math.min(0.5 - 0.2, minRate - padding));
        var upper = Math.min(1, Math.max(0.5 + 0.2, maxRate + padding));

        var perfLayout = {
            title: 'Archetype Performance (stacked Win + Tie)',
            xaxis: { title: 'Archetype' },
            yaxis: { title: 'Rate', range: [lower, upper] },
            barmode: 'stack',
            shapes: [{
                type: 'line', x0: -0.5, x1: names.length - 0.5, y0: 0.5, y1: 0.5,
                line: { color: '#888', width: 2, dash: 'dot' }
            }]
        };

        Plotly.newPlot('archetype-performance-chart', perfData, perfLayout);
    </script>
</body>
</html>
